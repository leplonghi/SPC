rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function hasRole(role) {
      return isAuthenticated() && getUserData().role == role;
    }
    
    function isAdmin() {
      return hasRole('SuperAdmin') || hasRole('AdminSPC');
    }
    
    function isEditor() {
      return isAdmin() || hasRole('EditorDPE') || hasRole('EditorDPHAP') || hasRole('EditorDPI');
    }

    // Heritage Assets and Areas
    // Allow public read access
    // Allow write access only to Editors and Admins
    match /heritage_assets/{document} {
      allow read: if true;
      allow write: if isEditor();
    }
    
    match /heritage_areas/{document} {
      allow read: if true;
      allow write: if isEditor();
    }
    
    // Users Collection
    // Authenticated users can read their own profile
    // Admins can read all profiles
    // Admins can write to any profile (to manage roles)
    // Users can create their own profile ONLY if setting role to 'Viewer' (for initial signup)
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin() || isEditor());
      allow write: if isAdmin();
      allow create: if isAuthenticated() && request.auth.uid == userId && request.resource.data.role == 'Viewer';
    }
    
    match /enrichment_queue/{document} {
      allow create: if isAuthenticated();
      allow read, update, delete: if isEditor();
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false; 
    }
  }
}
